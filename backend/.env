PORT=4000

# Comma-separated allowlist. Must match your frontend origin exactly.
# If frontend runs on 5500:
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# JWT secret for auth tokens
JWT_SECRET=replace_this_with_a_long_random_secret
ACCESS_TOKEN_TTL=1m
REFRESH_TOKEN_TTL=365d

API_WINDOW_MS=60000
API_HARD_LIMIT=120

AUTH_WINDOW_MS=60000
AUTH_SLOW_AFTER=10
AUTH_SLOW_DELAY_MS=10000
AUTH_HARD_LIMIT=30
